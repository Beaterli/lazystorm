{
  "name": "lazy_storm",
  "nimbus": "localhost",
  "workers": 1,
  "spout_max_pending": 100,
  "data_source": {
    "mysql": {
      "dataSourceClassName": "com.mysql.cj.jdbc.MysqlDataSource",
      "dataSource.url": "jdbc:mysql://localhost:3306/lazy",
      "dataSource.user": "lazy",
      "dataSource.password": "nopassword"
    }
  },
  "topology": {
    "kafkaSource": {
      "type": "spout",
      "class": "KafkaSpout",
      "brokers": "localhost:9092",
      "topic": "lazy_topic",
      "key.deserializer": "org.apache.kafka.common.serialization.IntegerDeserializer",
      "value.deserializer": "org.apache.kafka.common.serialization.StringDeserializer",
      "parallelism": 1
    },
    "switch": {
      "type": "bolt",
      "class": "KafkaKeySwitchBolt",
      "upstream": "kafkaSource",
      "grouping": "shuffle",
      "parallelism": 1,
      "key_stream_map": {
        "1": "one",
        "2": "another"
      }
    },
    "one": {
      "type": "bolt",
      "class": "Json2MapBolt",
      "model": "alarm",
      "upstream": {
        "switch": "alarm"
      },
      "grouping": "shuffle",
      "parallelism": 1
    },
    "insert_one": {
      "type": "bolt",
      "class": "SimpleInsertBolt",
      "data_source": "mysql",
      "table": "one",
      "batch_size": 1000,
      "timeout": 5,
      "rollback": true,
      "ack": true,
      "interval": 1,
      "upstream": "one",
      "grouping": "shuffle",
      "parallelism": 1
    },
    "update_one": {
      "type": "bolt",
      "class": "MapReplaceJdbcBolt",
      "data_source": "mysql",
      "table": "one",
      "timeout": 5,
      "rollback": true,
      "batch_size": 1000,
      "ack": true,
      "interval": 1,
      "upstream": "one",
      "grouping": "shuffle",
      "parallelism": 1
    },
    "oracle_seq_tag_bolt": {
      "type": "bolt",
      "upstream": "kafkaSource",
      "class": "OracleSeqTagBolt",
      "data_source": "oracle",
      "sequence": "sequence",
      "tag": "id",
      "timeout": 5,
      "rollback": true,
      "parallelism": 1
    }
  }
}